{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
      }
    },
    "rules": {
      "indent": [1, 2],
      "linebreak-style": [2, "unix"],
      "quotes": [1, "single"],
      "semi": [ 1, "never"],
      "semi-spacing": 0,
      "no-extra-semi": 1,
      "no-unused-vars": [ 1, { "vars": "all", "args": "none" }
      ],
      "no-trailing-spaces": 2,
      "no-console": 1
    }
}